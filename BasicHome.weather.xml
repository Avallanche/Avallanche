<window>
    
	<controls>
        
		<control>
			<description>GROUP: BasicHome 5 Day Weather Forecast</description>
			<type>group</type>
			<dimColor>0xffffffff</dimColor>
			<visible>plugin.isenabled(World Weather) + !string.contains(#Avalon.5DayWeather, false)</visible>
			<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
            
			<control>
				<description>Weather BG</description>
				<type>image</type>
				<id>0</id>
				<posX>1170</posX>
				<posY>916</posY>
				<width>700</width>
				<height>137</height>
				<shouldCache>true</shouldCache>
				<texture>basichome_weather_bg.png</texture>
			</control>
            
            <!-- *** Today *** -->
			<control>
				<description>Weather today name</description>
				<type>label</type>
				<id>0</id>
				<posX>1200</posX>
				<posY>920</posY>
                <font>fontB16</font>
                <textcolor>FF00537C</textcolor>
				<label>6030</label>
			</control>
            
			<control>
				<description>Weather today image</description>
				<type>image</type>
				<id>0</id>
				<posX>1200</posX>
				<posY>965</posY>
				<height>110</height>
				<width>110</width>
				<shouldCache>true</shouldCache>
				<texture>#WorldWeather.TodayIconImage</texture>
			</control>

			<control>
				<description>Weather today condition</description>
				<type>fadelabel</type>
				<id>0</id>
				<posX>1530</posX>
				<posY>950</posY>
				<width>245</width>
				<align>center</align>
                <font>fontB12</font>
                <textcolor>FF00537C</textcolor>
				<label>#WorldWeather.TodayCondition</label>
			</control>

			<control>
				<description>Weather today max value</description>
				<type>label</type>
				<id>0</id>
				<posX>1450</posX>
				<posY>960</posY>
                <textcolor>FF00537C</textcolor>
				<label>#WorldWeather.ForecastDay0High</label>
				<font>fontB14</font>
			</control>

			<control>
				<description>Weather today min value</description>
				<type>label</type>
				<id>0</id>
				<posX>1450</posX>
				<posY>1005</posY>
                <textcolor>FFFFFFFF</textcolor>
				<label>#WorldWeather.ForecastDay0Low</label>
				<font>fontB14</font>
			</control>	
            
            <control Style="RealWhiteColor">
                <description>today value</description>
                <type>label</type>
                <id>0</id>
                <posX>1310</posX>
                <posY>950</posY>
                <label>#WorldWeather.TodayTemperature</label>
                <font>fontB26</font>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
                <animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
                <animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
            </control>
            
            <!-- *** Current wind label *** -->
            <control>
                <description>current wind static label</description>
                <type>label</type>
                <id>0</id>
                <posX>1540</posX>
                <posY>965</posY>
                <label>#WorldWeather.TranslationWind:</label>
                <font>AvalonLight11</font>
                <textcolor>FF00537C</textcolor>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
                <animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
                <animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
            </control>
            
            <control Style="RealWhiteColor">
                <description>current wind label</description>
                <type>fadelabel</type>
                <id>0</id>
                <posX>1650</posX>
                <posY>965</posY>
                <width>433</width>
                <label>#WorldWeather.TodayWindSpeed - #WorldWeather.TodayWindDirection</label>
                <font>AvalonLight11</font>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
                <animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
                <animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
            </control>
            
            <!-- *** Current feels like label *** -->
            <control>
                <description>current feels like static label</description>
                <type>label</type>
                <id>0</id>
                <posX>1540</posX>
                <posY>1010</posY>
                <label>#WorldWeather.TranslationTemperatureFeelsLike:</label>
                <font>AvalonLight11</font>
                <textcolor>FF00537C</textcolor>
