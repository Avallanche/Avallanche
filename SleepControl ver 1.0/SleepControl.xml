<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>7969</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
		
	<controls>
        
		<control>
			<description>default background</description>
			<type>image</type>
			<id>1</id>
			<posY>0</posY>
			<posX>0</posX>
			<width>1920</width>
			<height>1080</height>
			<keepaspectratio>no</keepaspectratio>
			<centered>yes</centered>
			<zoom>yes</zoom>
			<texture>hover_sleepcontrol.png</texture>
			<animation effect="fade" time="300">visible</animation>
			<animation effect="fade" time="300" delay="300">hidden</animation>
			<animation effect="fade" time="0">WindowClose</animation>
			<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>			
		</control>		
        
        <control>
            <description>viewport image</description>
            <type>image</type>
            <id>0</id>
            <posX>0</posX>
            <posY>92</posY>
            <width>1893</width>
            <height>795</height>
            <texture>viewport_settings.png</texture>
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="250">WindowClose</animation>
            <animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
            <animation effect="slide" time="250" end="-1890,0">WindowClose</animation>		
        </control>	
        
        <control Style="HeaderLabels">
            <type>label</type>
            <description>Sleep Control label</description>
            <id>121</id>
            <posX>185</posX>
            <posY>38</posY>
            <width>500</width>
            <label>Sleep Control</label>
            <font>font22</font>
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="250">WindowClose</animation>
            <animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
            <animation effect="slide" time="250" end="-1890,0">WindowClose</animation>		
        </control>
	
		<!-- *** Button *** -->
		<control>
			<type>group</type>
			<description>group element</description>
			<layout>StackLayout(0, Vertical, true)</layout>
			<posX>70</posX>
			<posY>156</posY>
            <animation effect="fade" time="250">WindowOpen</animation>
            <animation effect="fade" time="250">WindowClose</animation>
            <animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
            <animation effect="slide" time="250" end="-1890,0">WindowClose</animation>		
            
			<control>
				<description>Sleep Mode</description>
				<type>button</type>
				<id>2</id>
  			    <label>Sleep Mode</label>
				<onup>9</onup>
				<ondown>3</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Set Timer manually</description>
				<type>button</type>
				<id>3</id>
  			    <label>Set Timer manually</label>
				<onup>2</onup>
				<ondown>4</ondown>
				<width>425</width>
			</control>
                
			<control>
				<description>Set Timer by recording selection</description>
				<type>button</type>
				<id>4</id>
  			    <label>Set Timer by recording selection</label>
				<onup>3</onup>
				<ondown>5</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Start/Stop Timer</description>
				<type>button</type>
				<id>5</id>
  			    <label>Start Timer</label>
				<onup>4</onup>
				<ondown>6</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Pause Timer</description>
				<type>button</type>
				<id>6</id>
  			    <label>Pause Timer</label>
				<onup>5</onup>
				<ondown>7</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Increment Timer</description>
				<type>button</type>
				<id>7</id>
  			    <label>Increment Timer</label>
				<onup>6</onup>
				<ondown>8</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Decrement Timer</description>
				<type>button</type>
				<id>8</id>
  			    <label>Decrement Timer</label>
				<onup>7</onup>
				<ondown>9</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Wait until tasks finished</description>
				<type>togglebutton</type>
				<id>9</id>
  			    <label>Wait until tasks finished</label>
				<onup>8</onup>
				<ondown>10</ondown>
				<width>425</width>
			</control>
            
			<control>
				<description>Volume Reduction</description>
				<type>togglebutton</type>
				<id>10</id>
  			    <label>Volume Reduction</label>
				<onup>9</onup>
				<ondown>2</ondown>
				<width>425</width>
			</control>
            
		</control>

		<!-- *** Sleep State *** -->
		<control>
			<description>Sleep State</description>
			<type>label</type>
			<id>0</id>
			<posX>1250</posX>
			<posY>220</posY>
			<label>#SleepControl.Activity</label>
			<font>AvalonLight20</font>
            <textcolor>6aa5cb</textcolor>
            <align>center</align>
		</control>

		<!-- *** Sleep Mode *** -->
		<control>
			<description>Sleep Mode</description>
			<type>label</type>
			<id>0</id>
			<posX>1250</posX>
			<posY>420</posY>
			<label>Mode - #SleepControl.Method</label>
			<font>AvalonLight20</font>
            <textcolor>6aa5cb</textcolor>
            <align>center</align>
		</control>

		<!-- *** Sleep Counter *** -->
		<control>
			<description>Sleep Counter</description>
			<type>label</type>
			<id>0</id>
			<posX>1250</posX>
			<posY>620</posY>
			<label>#SleepControl.Counter</label>
			<font>AvalonLight32</font>
            <textcolor>6aa5cb</textcolor>
            <align>center</align>
		</control>

		<!-- *** Sleep Status *** -->
		<control>
			<description>Sleep Status</description>
			<type>label</type>
			<id>0</id>
			<posX>410</posX>
			<posY>445</posY>
			<width>900</width>
			<label>#SleepControl.Status</label>
			<align>center</align>
			<font>font16bold</font>
			<textcolor>ff808080</textcolor>
		</control>

		<!-- *** Sleep Start/End *** -->
		<control>
			<description>Sleep Start/End</description>
			<type>label</type>
			<id>0</id>
			<posX>1250</posX>
			<posY>820</posY>
			<label>#SleepControl.Start - #SleepControl.End</label>
			<font>AvalonLight20</font>
            <textcolor>6aa5cb</textcolor>
            <align>center</align>
			<visible>!string.equals(#SleepControl.Start, )</visible>
		</control>

		<!-- *** Recording Count *** -->
		<control>
			<type>label</type>
			<id>0</id>
			<posX>410</posX>
			<posY>570</posY>
			<width>830</width>
			<label>#SleepControl.RecordingTimerCount #SleepControl.TranslationRecordingTimerCount</label>
			<visible>!string.equals(#SleepControl.Recordings, )</visible>
		</control>

		<!-- *** Recording List *** -->
		<control>
			<description>Text</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>410</posX>
			<posY>600</posY>
			<width>830</width>
			<height>70</height>
			<label>#SleepControl.Recordings</label>
		</control>

	</controls>
</window>
